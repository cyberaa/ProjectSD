<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default">

        <action name="idea">
            <result>/idea.jsp</result>
        </action>

        <action name="topics">
            <result>/topics.jsp</result>
        </action>

        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="register">
            <result>/register.jsp</result>
        </action>

        <action name="loginAction" class="action.Login"
                method="execute">
            <result name="success">/idea.jsp</result>
            <result name="error">/index.jsp</result>
        </action>

        <action name="registerAction" class="action.Register"
                method="execute">
            <result name="success">/index.jsp</result>
        </action>

        <action name="submitIdeaAction" class="action.SubmitIdea"
                method="execute">
            <result name="success">/idea.jsp</result>
        </action>

        <action name="submitTopicAction" class="action.SubmitTopic"
                method="execute">
            <result name="success">/topics.jsp</result>
        </action>

    </package>

</struts>